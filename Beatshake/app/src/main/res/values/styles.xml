<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/darkorange</item>
        <item name="android:buttonStyle">@style/DefaultButton</item>
    </style>


    <style name="DefaultButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
        <item name="android:background">@color/silver</item><!-- only way to change this is to change the src image -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
